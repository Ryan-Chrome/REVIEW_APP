<div id = "Home" class = "Login">
  <div id = "LoginContent">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス", class: "label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: "label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログインを記憶する", class: "checkbox-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
