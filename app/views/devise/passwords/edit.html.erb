<div id = "Home" class = "Login">
  <div id = "LoginContent">
    <h2>パスワード再設定</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class = "field">
        <%= f.label :password, "新しいパスワード", class: "label" %><br>
        <%= f.password_field :password, autofoucus: true, autocomplate: "new-password", class: "form", placeholder: "#{@minimum_password_length}文字以上" %>
      </div> 

      <div class = "field">
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "label" %><br>
        <%= f.password_field :password_confirmation, autocomplate: "new-password", class: "form" %>
      </div>

      <div class = "actions">
        <%= f.submit "パスワード変更", class: "btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>


